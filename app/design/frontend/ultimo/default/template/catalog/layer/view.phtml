/**
 * Category layered navigation
 *
 * @see Mage_Catalog_Block_Layer_View
 */
?>
<?php $parentID = $this->getLayer()->getCurrentCategory()->getParentId(); ?>
<?php if($this->canShowBlock()): ?>
<div class="sidebar prod_fliter">
    <div class="sidebar-block white-bg">
        <div class="block block-layered-nav">
            <div id="layered-nav-marker"></div>
            <div class="block block-layered-nav<?php if (!$this->getLayer()->getState()->getFilters()): ?> block-layered-nav--no-filters<?php endif; ?>">
                <div class="block-title">
                    <strong><span><?php echo $this->__('FILTERS') ?></span></strong>
                    <?php if ($this->getLayer()->getState()->getFilters()){ ?>
                        <div class="right" id="clear-all-bttn"><a href="<?php echo $this->getClearUrl() ?>"><?php echo $this->__('Clear all') ?></a></div>
                    <?php }else{ ?>
                        <div class="right" id="clear-all-bttn" style="display: none;"><a href="<?php echo $this->getClearUrl() ?>"><?php echo $this->__('Clear all') ?></a></div>
                    <?php } ?>
                </div>
                <?php echo $this->getStateHtml() ?>
                <div class="block-content toggle-content">
                    <?php if($this->canShowOptions()): ?>
                        <p class="block-subtitle block-subtitle--filter"><?php echo $this->__('Filter') ?></p>
                        <dl id="narrow-by-list">
                            <?php $_filters = $this->getFilters() ?>
                            <?php foreach ($_filters as $_filter): ?>
                            <?php if($_filter->getItemsCount()): ?>
                            <?php if($parentID == 4 && $_filter->getName() == 'Imprints') { ?>
                            
                            <?php } else { ?>
                                <dt><?php echo $this->__($_filter->getName()) ?></dt>
                                <dd><?php echo $_filter->getHtml() ?></dd>
                            <?php } ?>
                            <?php endif; ?>
                            <?php endforeach; ?>
                        </dl>
                        <script type="text/javascript">decorateDataList('narrow-by-list')</script>
                    <?php endif; ?>
                </div>
            </div>
        </div>
    </div>
</div>
<?php endif; ?>
